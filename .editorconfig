[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[{*.jhm, *.xslt, *.xul, *.rng, *.xsl, *.xsd, *.ant, *.tld, *.fxml, *.jrxml, *.xml, *.jnlp, *.wsdl}]
indent_style = space
indent_size = 2

[{*.erb, *.rhtml}]
indent_style = space
indent_size = 2

[{rcov, rake, cucumber, rails, spec, spork, capfile, gemfile, Rakefile, guardfile, isolate, vagrantfile, Puppetfile, *.gemspec, *.jbuilder, *.rbw, *.thor, *.ru, *.rb, *.rake}]
indent_style = space
indent_size = 2

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2
